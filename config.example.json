{
    "app_name": "CuckooNest",
    "version": "1.0.0",
    "debug_mode": true,
    "refresh_rate": 60.0,
    "display": {
        "width": 320,
        "height": 320,
        "brightness": 0.8
    },
    "homeAssistant": {
        "baseURL": "http://homeassistant.local:8123",
        "token": "example_long_lived_access_token"
    },
    "integrations": [
        {
            "name": "Garage Lights",
            "entityId": "switch.garage_lights",
            "type": "HomeAssistant"
        },
        {
            "name": "Office External",
            "entityId": "switch.office_external_lights",
            "type": "HomeAssistant"
        },
        {
            "name": "Office Internal",
            "entityId": "switch.office_internal_lights",
            "type": "HomeAssistant"
        }
    ],
    "firstScreen": "Home Screen",
    "screens":[
        {
            "name": "Home Screen",
            "type": "home",
            "nextScreen": "Main Menu"
        },
        {
            "name": "Main Menu",
            "type": "menu",
            "menuItems": [
                {
                    "name": "Garage Lights",
                    "icon": "light"
                },{
                    "name": "Office External",
                    "icon": "fan"
                },{
                    "name": "Office Internal",
                    "icon": "breifcase"
                }
            ]
        },
        {
            "name": "Garage Lights",
            "type": "switch"
        },
        {
            "name": "Office External",
            "type": "switch"
        },
        {
            "name": "Office Internal",
            "type": "switch"
        }
    ]
}
