{
    "app_name": "CuckooNest",
    "version": "1.0.0",
    "debug_mode": true,
    "refresh_rate": 60.0,
    "display": {
        "width": 320,
        "height": 320,
        "brightness": 0.8
    },
    "hal": {
        "beeper_device": "/dev/null",
        "display_device": "/dev/fb0",
        "button_device": "/dev/input/by-path/platform-i8042-serio-0-event-kbd",
        "rotary_device": "/dev/input/mice",
        "backlight_device": "/dev/null",
        "backplate_serial_device": "/dev/null",
        "emulate_display": true,
        "backlight_active_seconds": 10,
        "backlight_max_brightness": 115,
        "backlight_min_brightness": 20
    },
    "homeAssistant": {
        "baseURL": "http://homeassistant.local:8123",
        "token": "example_long_lived_access_token"
    },
    "integrations": [
        {
            "name": "Garage Lights",
            "entityId": "switch.garage_lights",
            "type": "HomeAssistant"
        },
        {
            "name": "Office External",
            "entityId": "switch.office_external_lights",
            "type": "HomeAssistant"
        },
        {
            "name": "Office Internal",
            "entityId": "switch.office_internal_lights",
            "type": "HomeAssistant"
        }
    ],
    "screens":[
        {
            "name": "Home Screen",
            "type": "analogclock",
            "id": "initial",
            "nextScreen": "Main Menu"
        },
        {
            "name": "Main Menu",
            "type": "menu",
            "menuItems": [
                {
                    "name": "Garage Lights",
                    "nextScreen": "Office External",
                    "icon": "light"
                },{
                    "name": "Office External",
                    "nextScreen": "Office Internal",
                    "icon": "fan"
                },{
                    "name": "Office Internal",
                    "nextScreen": "Tempature",
                    "icon": "breifcase"
                },{
                    "name": "Temperature",
                    "icon": "temperature"
                }
            ]
        },
        {
            "name": "Garage Lights",
            "type": "switch"
        },
        {
            "name": "Office External",
            "type": "switch"
        },
        {
            "name": "Office Internal",
            "type": "switch"
        }
    ]
}
